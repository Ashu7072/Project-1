pipeline {
    agent any
    stages{
        stage('git cloned'){
            steps{
                git url:'https://github.com/Ashu7072/Project-1', branch: "main"
                          
            }
        }
        stage('Build docker image'){
            steps{
                script{
                    sh 'docker build -t ashu7072/staragileprojectfinance:v1 .'
                    sh 'docker images'
                }
            }
        }
         stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: DOCKER_HUB_CREDENTIALS, passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh "echo ashu@7072 | docker login -u ashu7072 --password-stdin"
                    sh "docker push ashu7072/staragileprojectfinance:v1"
                }
            }
        }
     stage('Deploy') {
            steps {
                sh 'sudo docker run -itd --name My-first-container1 -p 8083:8081 ashu7072/staragileprojectfinance:v1'
                  
                }
            }
        
    }
}
